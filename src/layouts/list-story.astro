        <!-- Four attributes are required for stories to be discovered on the web. Title, publisher name, publisher logo, and poster image. -->
        <amp-story
            standalone=""
            title={ content.title }
            publisher={ author }
            publisher-logo-src="/mark.png"
            poster-portrait-src={ videoPosterUrl }
