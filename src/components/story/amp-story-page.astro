---

const {
    id,
    // layout = '',
    backgroundSrc = '',
    backgroundPoster = '',
    backgroundClass = 'linear-mask',
} = Astro.props

const pageAttributes = {
    id,
    className: Astro.props.className,
    // layout,
}

const backgroundType = (() => {
    if ( backgroundSrc.endsWith('.mp4') ) {
        return 'video'
    }

    if ( backgroundSrc.includes('.webp') || backgroundSrc.includes('.jpg') ) {
        return 'image'
    }

    return ''
})()
---

<amp-story-page
    class="bg-black"
    { ...pageAttributes }
>
    { backgroundType === 'video' && (
        // Video Poster BG
        // Each amp-story-page component must have at least one or more layer components, which stack upon one another to create visual effects.
        <amp-story-grid-layer
            template="fill"
            class={ backgroundClass }
        >
            <amp-video
                autoplay
                loop
                width="720"
                height="1280"
                poster={ backgroundPoster }
                layout="responsive"
                title={ Astro.props.mediaAriaLabel }
            >
                <source src={ backgroundSrc } type="video/mp4" />
            </amp-video>
        </amp-story-grid-layer>
    )}

    { backgroundType === 'image' && (
        // Image Poster BG
        <amp-story-grid-layer
            template="fill"
            class={ backgroundClass }
        >
            <amp-img
                src={ backgroundSrc }
                width="720"
                height="1280"
                layout="responsive"
            >
            </amp-img>
        </amp-story-grid-layer>
    )}
    <slot />
</amp-story-page>
